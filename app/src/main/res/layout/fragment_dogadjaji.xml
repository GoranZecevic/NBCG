<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Dogadjaji"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true"
        app:lottie_fileName="data.json"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_dogadjaji"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">


    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/dogadjajiFilter"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="@dimen/v16"
        android:layout_marginBottom="@dimen/v16"
        android:src="@drawable/ic_active_search"
        app:fabSize="normal"
        app:elevation="3dp"
        app:borderWidth="0dp"
        app:fabCustomSize="75dp"
        app:pressedTranslationZ="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/gold"
        app:maxImageSize="70dp"
        android:layout_gravity="bottom|end" />

</android.support.constraint.ConstraintLayout>