<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/katalog_izdanja_card_layout"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/katalog_izdanja_card"
        app:cardBackgroundColor="@color/card"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/v8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/print_id_katalog_izdanaj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_katalog"
                    app:layout_constraintTop_toBottomOf="@+id/katalog_izdanja_opsirnije_btn" />



                <TextView
                    android:id="@+id/print_naslov_katalog_izdanaj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gold"
                    android:paddingTop="@dimen/v8"
                    android:paddingBottom="@dimen/v8"
                    android:paddingRight="@dimen/v8"
                    android:paddingLeft="@dimen/v8"
                    android:text="Title"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/v8"
                    android:layout_marginRight="@dimen/v8"
                    android:layout_marginTop="@dimen/v4"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/print_naslov_katalog_izdanaj"></FrameLayout>

                <TextView
                    android:id="@+id/print_datumod_katalog_izdanaj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="@dimen/v8"
                    android:text="date"
                    app:layout_constraintStart_toStartOf="@+id/img_katalog"
                    app:layout_constraintTop_toBottomOf="@+id/print_naslov_katalog_izdanaj" />

                <TextView
                    android:id="@+id/print_tip_naslova_katalog_izdanaj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="0dp"
                    android:text="Tip naslova"
                    app:layout_constraintEnd_toEndOf="@+id/img_katalog"
                    app:layout_constraintTop_toBottomOf="@+id/print_naslov_katalog_izdanaj" />

                <FrameLayout
                    android:id="@+id/b2"
                    android:layout_marginTop="@dimen/v4"
                    android:layout_marginBottom="@dimen/v8"
                    android:layout_marginLeft="@dimen/v8"
                    android:layout_marginRight="@dimen/v8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/print_tip_naslova_katalog_izdanaj">
                </FrameLayout>


                <ImageView
                    android:id="@+id/img_katalog"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/v16"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/grb"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/print_datumod_katalog_izdanaj" />

                <TextView
                    android:id="@+id/print_opis_katalog_izdanaj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Description"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_katalog" />

                <TextView
                    android:id="@+id/print_tekst_katalog_izdanaj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Text catalogue"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_katalog"
                    app:layout_constraintTop_toBottomOf="@+id/b1" />

                <TextView
                    android:id="@+id/print_link_katalog_izdanaj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/print_tekst_katalog_izdanaj" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="8dp"
                    android:text="Price: "
                    app:layout_constraintStart_toStartOf="@+id/img_katalog"
                    app:layout_constraintTop_toBottomOf="@+id/img_katalog" />


                <TextView
                    android:id="@+id/print_cijena_katalog_izdanaj"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="cijena"
                    app:layout_constraintStart_toEndOf="@+id/price"
                    app:layout_constraintTop_toBottomOf="@+id/img_katalog" />

                <TextView
                    android:id="@+id/e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/v8"
                    android:text="€"
                    app:layout_constraintStart_toEndOf="@+id/print_cijena_katalog_izdanaj"
                    app:layout_constraintTop_toBottomOf="@+id/img_katalog" />



                <Button
                    android:id="@+id/katalog_izdanja_opsirnije_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="@dimen/v8"
                    android:layout_marginTop="@dimen/v8"
                    android:background="@color/gold"
                    android:textColor="@color/white"
                    android:text="OPSIRNIJE"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/print_opis_katalog_izdanaj" />

                <FrameLayout
                    android:id="@+id/b3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/v8"
                    android:layout_marginLeft="@dimen/v8"
                    android:layout_marginRight="@dimen/v8"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/katalog_izdanja_opsirnije_btn"
                    app:layout_constraintEnd_toEndOf="parent"></FrameLayout>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>