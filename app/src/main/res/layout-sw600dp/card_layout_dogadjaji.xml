<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vijesti_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:id="@+id/vijesti_card"
        app:cardBackgroundColor="@color/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_dogadjaji"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/v8"
                android:layout_marginBottom="@dimen/v8"
                android:background="@drawable/grb"
                app:layout_constraintBottom_toTopOf="@+id/borderBottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2" />

            <Button
                android:id="@+id/dogadjaji_opsirnije_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/v24"
                android:layout_marginLeft="@dimen/v24"
                android:layout_marginEnd="@dimen/v24"
                android:layout_marginRight="@dimen/v24"
                android:layout_marginBottom="@dimen/v16"
                android:background="@color/gold"
                android:text="OPSIRNIJE"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_dogadjaji" />

            <FrameLayout
                android:background="@color/colorPrimary"
                android:id="@+id/borderBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/v8"
                android:layout_marginRight="@dimen/v8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogadjaji_opsirnije_btn">

            </FrameLayout>


            <TextView
                android:id="@+id/print_naslov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gold"
                android:paddingLeft="@dimen/v8"
                android:paddingTop="@dimen/v8"
                android:paddingRight="@dimen/v8"
                android:paddingBottom="@dimen/v8"
                android:text="Naslov text"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/v8"
                android:layout_marginTop="@dimen/v4"
                android:layout_marginRight="@dimen/v8"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/print_naslov"></FrameLayout>

            <TextView
                android:id="@+id/print_datumod"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:text="datum"
                android:textColor="@color/gold"
                app:layout_constraintEnd_toStartOf="@+id/print_tip_novosti"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <TextView
                android:id="@+id/print_tip_novosti"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="tip novosti"
                android:textColor="@color/gold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/print_datumod"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <FrameLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/v8"
                android:layout_marginTop="@dimen/v4"
                android:layout_marginRight="@dimen/v8"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/print_tip_novosti"></FrameLayout>

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/v24"
                android:layout_marginLeft="@dimen/v24"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/v24"
                android:layout_marginRight="@dimen/v24"
                android:layout_marginBottom="8dp"
                android:text="Description text"
                app:layout_constraintBottom_toTopOf="@+id/dogadjaji_opsirnije_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_dogadjaji"
                app:layout_constraintTop_toBottomOf="@+id/line2">

                <TextView
                    android:id="@+id/print_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>

            <TextView
                android:id="@+id/print_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gold"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@+id/print_datumod"
                app:layout_constraintEnd_toStartOf="@+id/print_datumod"
                app:layout_constraintStart_toEndOf="@+id/img_dogadjaji" />


            <TextView
                android:id="@+id/print_opis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@+id/print_id"
                app:layout_constraintStart_toEndOf="@+id/print_naslov" />

            <TextView
                android:id="@+id/print_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@+id/print_id"
                app:layout_constraintStart_toEndOf="@+id/print_naslov" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>